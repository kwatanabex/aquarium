<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE syl-layouts PUBLIC
  "-//SyL Framework Development Project//DTD Layout Defines 1.0//JP"
  "http://syl.jp/dtds/syl-layouts_1_0.dtd">

<!--
  レイアウト設定ファイル（layouts.xml）

  レイアウト機能を使用する場合に設定します。
-->
<syl-layouts>

<layout name="popup"
        file="Common/default_popup.html"
        enable="true">
  <content name="_CONTENTS_" />

  <params>
    <action path="(.+)\.php">
      <param name="html_title" value="AQUARIUM" />
    </action>
  </params>
</layout>

<layout name="default"
        file="Common/default.html"
        enable="true">
  <template name="_MENU_" file="Common/menu.html" />
  <content name="_CONTENTS_" />

  <params>
    <action path="(.+)\.php">
      <param name="html_title" value="AQUARIUM" />
    </action>
  </params>
</layout>

</syl-layouts>
